{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-microsoft-contrib/recommended"
    ],
    "jsRules": {},
    "rules": {
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-separator"
            ]
        },
        "no-angle-bracket-type-assertion": false,
        "no-namespace": false,
        "no-relative-imports": false
    },
    "rulesDirectory": []
}